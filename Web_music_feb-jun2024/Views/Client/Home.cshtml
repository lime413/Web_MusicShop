@{
    ViewData["Title"] = "Главная";
}

<section id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <div id="carouselExampleIndicators" class="carousel slide">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/img/carousel1.jpg" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/carousel2.jpg" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/carousel3.jpg" class="d-block w-100">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="row row-header">
            <div class="col-12">
                <h3>
                    Подборки
                </h3>
            </div>
        </div>
        <div class="row row-cols-3">
            <div class="col">
                <div class="card">
                    <img src="/img/selection1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Идеи подарков</h5>
                        <a asp-area="" asp-controller="Client" asp-action="Catalog" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="/img/selection2.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Новинки</h5>
                        <a asp-area="" asp-controller="Client" asp-action="Catalog" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="/img/selection3.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Детям и родителям</h5>
                        <a asp-area="" asp-controller="Client" asp-action="Catalog" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>