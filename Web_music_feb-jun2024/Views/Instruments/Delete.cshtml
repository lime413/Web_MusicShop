@model Web_music_feb_jun2024.Models.Instrument

@{
    ViewData["Title"] = "Удалить";
}
<section>
    <div class="row">
        <div class="col col-8 offset-2">

            <h3 class="mb-3">Удаление товара</h3>
            <h4 class="mb-3">Вы уверены, что хотите удалить этот товар?</h4>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2 mb-4">
                        Название
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2 mb-4">
                        Производитель
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Manufacturer)
                    </dd>
                    <dt class="col-sm-2 mb-4">
                        Цена (руб.)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2 mb-4">
                        Рейтинг
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Rating)
                    </dd>
                    <dt class="col-sm-2 mb-4">
                        Ссылка на изображение
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Img)
                    </dd>
                    <dt class="col-sm-2 mb-3">
                        Артикул
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Articul)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                </form>
                <div class="mt-4">
                    <a asp-action="Index">Вернуться к списку товаров</a>
                </div>
            </div>
        </div>
    </div>
</section>